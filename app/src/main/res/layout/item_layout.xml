<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorBlackBackgr">


        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp">

            <ImageView
                android:id="@+id/image_profile_view"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@mipmap/ic_launcher"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/holder_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:text="Default Name Text"
                app:layout_constraintLeft_toRightOf="@id/image_profile_view"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/holder_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                app:layout_constraintTop_toBottomOf="@id/holder_name"
                android:text="Default address text"
                app:layout_constraintLeft_toRightOf="@id/image_profile_view" />

            <TextView
                android:id="@+id/holder_country"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                app:layout_constraintTop_toBottomOf="@id/holder_address"
                android:text="This is the default text"
                app:layout_constraintLeft_toRightOf="@id/image_profile_view" />

            <TextView
                android:id="@+id/holder_gender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="My Gender"
                app:layout_constraintLeft_toRightOf="@id/image_profile_view" />

            <TextView
                android:id="@+id/holder_birthdate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="This is the default text"
                app:layout_constraintLeft_toRightOf="@id/image_profile_view" />


        </android.support.constraint.ConstraintLayout>



</android.support.v7.widget.CardView>