<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="grnflg_font_style">
        <item name="android:fontFamily">@font/museo_sans_300</item>
        <item name="android:textColor">@color/colorWhiteFont</item>
        <item name="android:textSize">22sp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">300dp</item>
    </style>

    <style name="grnflg_font_style.desc" parent="grnflg_font_style">
        <item name="android:drawableStart">@drawable/tick2</item>
        <item name="android:drawablePadding">15dp</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="grnflg_font_style.btn">
        <item name="android:textColor">@color/colorBlackBackgr</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:layout_marginBottom">25dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="Theme.UpItemBar" parent="android:Theme.Holo">
        <item name="android:homeAsUpIndicator">@drawable/ic_back_button_24dp</item>
    </style>
    <style name="Login_style" parent="grnflg_font_style">
        <item name="android:layout_marginStart">30dp</item>
        <item name="android:layout_marginEnd">30dp</item>
    </style>

    <style name="style_edittxt_login" parent="Login_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:paddingEnd">10dp</item>
        <item name="android:textColor">@color/colorBlackBackgr</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:background">@color/colorWhiteFont</item>
    </style>

    <style name="grnflg_font_style.login_txtview" parent="Login_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">38dp</item>

        <item name="android:textSize">25sp</item>
    </style>

    <style name="grnflg_font_style.error_msg_txtview" parent="grnflg_font_style.login_txtview">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:paddingEnd">30dp</item>
        <item name="android:drawablePadding">15dp</item>
        <item name="android:paddingStart">15dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawableLeft">@drawable/cross</item>
        <item name="android:background">@drawable/textview_error_border</item>
    </style>


</resources>
